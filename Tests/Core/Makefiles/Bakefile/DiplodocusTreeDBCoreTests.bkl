ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/TestFramework/Include/Ishiko/TestFramework/TestFrameworkCore.bkl;
diplodocusdbpath = envvar("DIPLODOCUSDB");
import $(diplodocusdbpath)/TreeDB/Include/DiplodocusDB/TreeDB/TreeDBCore.bkl;

toolsets = gnu vs2017 vs2015 vs2013;

gnu.makefile = ../GNUmakefile/GNUmakefile;
vs2017.solutionfile = ../VC15/DiplodocusTreeDBCoreTests.sln;
vs2015.solutionfile = ../VC14/DiplodocusTreeDBCoreTests.sln;
vs2013.solutionfile = ../VC12/DiplodocusTreeDBCoreTests.sln;

program DiplodocusTreeDBCoreTests : DiplodocusTreeDBCore, IshikoTestFrameworkCore
{
    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += DiplodocusTreeDBCore IshikoTestFrameworkCore IshikoProcess IshikoErrors boost_filesystem boost_system;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
    }

    headers
    {
        ../../Source/TreeDBKeyTests.h
        ../../Source/TreeDBValueTests.h
    }

    sources
    {
        ../../Source/main.cpp
        ../../Source/TreeDBKeyTests.cpp
        ../../Source/TreeDBValueTests.cpp
    }
}
